{
    "linters": {
        "cpp": {
            "type": "cpplint",
            "severity": {
                "build/c++11": "disabled"
            },
            "flags": ["--extensions=h,h++,hh,hpp,hxx,cc,c++,cpp,cxx,C"],
            "include": ["(\\.h$)", "(\\.h++)", "(\\.hh)","(\\.hpp$)",  "(\\.hxx$)", "(\\.cc$)", "(\\.c++$)", "(\\.cpp$)", "(\\.cxx$)","(\\.C$)"],
            "exclude": ["(^include/smartplugin/message/)", "(^src/smartplugin/message/)"]
        },
        "python": {
              "type": "pep8",
              "include": "(\\.py$)"
        },
        "c": {
            "type": "cpplint",
            "severity": {
                "build/c++11": "disabled"
            },
            "flags": ["--extensions=h,c"],
            "include": ["(\\.h$)", "(\\.c$)"]
        }
    }
}
